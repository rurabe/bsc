<% booklist.books.map do |book| %>
{
	"vendor_id":	"<%= @book.ean %>",
	"amazon": {
		"new": {
			"vendor": 						"amazon",
			"vendorId":						"<%= @book.asin %>",
			"price":							"<%= show_price(@book.amazon_new_price) %>",
			"condition":					"new"
		},
		"used": {
			"vendor": 						"amazon",
			"vendorId":						"<%= @book.asin %>",
			"price":							"<%= show_price(@book.amazon_used_price) %>",
			"condition":					"used"
		}
	},
	"bn": {
		"new": {
			"vendor": 						"bn",
			"vendorId":						"<%= @book.ean %>",
			"price":							"<%= show_price(@book.bn_new_price) %>",
			"condition":					"new",
			"link":								"<%= @book.bn_link %>"
		}
	}
}	
<% end %>