<div class="row-fluid pagination-centered">
	<div class="span12" id="main">

		<div class="row-fluid">
			<div class="logo">
				<%= image_tag 'logo.png' %>
			</div>
			<div class="school">
				Portland State
			</div>
			<div class="subtag">
				Save up to 40% versus the bookstore in 60 seconds or less!
			</div>
		</div>
		


		<div class="row-fluid">
			<div class="loginform">
				<%= form_for @search do |f| %>
				<table class="login">
					<tr>
						<td class="form-label-cell">
							<%= f.label "ODIN Username" %>
						</td>
						<td class="form-field-cell">
							<%= f.text_field :username, :class => 'form-field' %>
						</td>
					</tr>
					<tr>
						<td class="form-label-cell">
							<%= f.label :password %>
						</td>
						<td class="form-field-cell">
							<%= f.password_field :password, :class => 'form-field' %>
						</td>
					</tr>
				</table>
					<%= f.submit "Find my books!", :class => 'btn btn-large btn-success' %>
				<% end %>
			</div>
		</div>
	</div>
</div>