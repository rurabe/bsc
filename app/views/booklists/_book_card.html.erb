<div class="book-card-container">

  <%= render :partial => 'booklists/book_card_headers' %>

  <% @booklist.courses.each do |course| %>

    <%= render :partial => 'booklists/course_row', :locals => { :course => course } %>

    <% if course.books.present? %>

      <% course.books.each do |book| %>
        <%= render :partial => 'booklists/book_row', :locals => { :book => book } %>
      <% end %>

    <% else %>

      <%= render :partial => 'booklists/no_books_row' %>

    <% end %>

  <% end %>

  <%= render :partial => 'booklists/checkout_button' %>

</div>

